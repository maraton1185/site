<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="default">
		<field
			name="user_id"
			type="useractivate"
			label="COM_EBOOK_FIELD_USER_ID_LABEL"
			description="COM_EBOOK_FIELD_USER_ID_DESC"
			default="0"
			required="true" />

		<field
			name="UUID"
			type="textarea"
			rows="5"
			required="true"
			label="COM_EBOOK_FIELD_UUID_LABEL"
			description="COM_EBOOK_FIELD_UUID_DESC"
			 />
			 
		<field
			name="email"
			type="email"
			readonly="true"
			label="COM_EBOOK_FIELD_EMAIL_LABEL"
			description="COM_EBOOK_FIELD_EMAIL_DESC"
			 />

		<field
			name="password"
			type="text"
			readonly="true"
			label="COM_EBOOK_FIELD_PASSWORD_LABEL"
			description="COM_EBOOK_FIELD_PASSWORD_DESC"
			 />
			
		<field
			name="serial"
			type="textarea"
			readonly="true"
			label="COM_EBOOK_FIELD_SERIAL_LABEL"
			description="COM_EBOOK_FIELD_SERIAL_DESC"
			 />
					
	</fieldset>
</form>
