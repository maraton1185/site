<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="id"
            type="hidden"
        />
        <field
			name="user_id"
			type="user"
			label="COM_EBOOK_FIELD_USER_ID_LABEL"
			description="COM_EBOOK_FIELD_USER_ID_DESC"
			default="0"
			required="true" />
			
	   <field name="state" 
	   		type="checkbox" 
	   		label="paid" 
	   		description="paid" 
	   		default="0" />
	   		
	   	<field name="devices" 
	   		type="text" 
	   		default="3" 
	   		label="devices" 
	   		description="" 
	   		filter="integer" />
	   		
	   	<field name="total" 
	   		type="text" 
	   		default="0" 
	   		label="total" 
	   		description="order's total"/> 
	   		
	   	
       <field
			name="description"
			type="textarea"
			rows="5"
			required="false"
			label="description"
			description="order's description"
			 />
			        
    </fieldset>
</form>
